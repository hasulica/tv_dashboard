<% content_for :title do %>1080p dashboard<% end %>

<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-view="Clock"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="6" data-sizey="1">
      <div data-id="welcome" data-view="Text" data-title="Radu" data-text="This is your shiny new 1080p dashboard." data-moreinfo="Protip: You can drag the widgets around!"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="4">
      <div data-id="wunderlist" data-view="List" data-unordered="true" data-title="Wunderlist" data-moreinfo="things to attend to"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="6" data-sizey="4">
      <div data-id="karma" data-view="Number" data-title="Karma" style="background-color:#96bf48;"></div>
      <i class="fa fa-heart icon-background"></i>
    </li>
  </ul>
</div>
